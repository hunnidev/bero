<div class="collection__cta-card grid__item gradient color-{{ block.settings.color_scheme }}">
  {%- if block.settings.image != blank -%}
    {{
      block.settings.image
      | image_url: width: 832
      | image_tag: loading: 'lazy', width: 416, height: 520, class: 'background-image'
    }}
  {%- endif -%}

  {%- if block.settings.pre_heading != blank -%}
    <h3 class="h6">
      {{ block.settings.pre_heading }}
    </h3>
  {%- endif -%}

  {%- if block.settings.title != blank -%}
    <h4 class="{{ block.settings.title_size }} normal-case">
      {{ block.settings.title }}
    </h4>
  {%- endif -%}

  {%- if block.settings.cta_text != blank and block.settings.cta_url != blank -%}
    <a
      href="{{ block.settings.cta_url }}"
      class="button button--primary"
    >
      {{ block.settings.cta_text }}
    </a>
  {%- endif -%}
</div>
