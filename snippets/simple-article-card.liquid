{% assign metafields = article.metafields.custom %}
<a class="simple-article-card" href="{{ article.url | default: '#' }}">
    <div class="main-info">
        {% for tag in article.tags %}
            <span class="uppercase article-tag article-card-tag">{{ tag }}</span>
        {% endfor %}

        {% if metafields.event_location.value != blank or metafields.event_date.value != blank %}
            <div class="event-details">
                {% if metafields.event_location.value != blank %}
                    <p class="location">{{ metafields.event_location.value }}</p>
                {% endif %}
                {% if metafields.event_date.value != blank %}
                    <p>{{ metafields.event_date.value }}</p>
                {% endif %}
            </div>
        {% endif %}

        <h3 class="h4">{{ article.title }}</h3>

        {% if blog.template_suffix != 'events' %}
            {% if show_date %}
                Published on:&nbsp;<span class="circle-divider">{{ article.published_at | date: '%m/%d/%Y' }}</span>
            {% endif %}
        {% endif %}
    </div>

    <button class="link underlined-link read-more">{{ read_more_txt | default: 'READ NOW' }}</button>


</a>