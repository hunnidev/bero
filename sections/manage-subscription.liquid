{%- if customer and customer.tags contains 'vip' -%}
  <div class="page-width color-{{ section.settings.color_scheme }}">
    <a
      href="{{section.settings.cta_url}}"
      class="button button--secondary button--full-width"
    >
      {{ section.settings.cta_text }}
    </a>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Manage Subscriptiion",
  "tag": "section",
  "class": "section-manage-subscription",
  "settings": [
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Manage Membership"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA URL"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
      "default": "scheme-2"
    }
  ]
}
{% endschema %}
