<div class="{% if section.settings.include_margins %}page-width{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} app-section">
  {%- for block in section.blocks -%}
    {%- if forloop.first and template.suffix == 'account-club-bero' and block.id contains 'rivo' -%}
      <h1 class="h3 text-cream">Club BERO</h1>
    {%- endif -%}
    <div class="shopify-app-block shopify-app-block--{{ block.id | split: '_' | first }}">
      {% render block %}
    </div>
  {%- endfor -%}
</div>

{% schema %}
{
  "name": "t:sections.apps.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "include_margins",
      "default": true,
      "label": "t:sections.apps.settings.include_margins.label"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "t:sections.apps.presets.name"
    }
  ]
}
{% endschema %}
