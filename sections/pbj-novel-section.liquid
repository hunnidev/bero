<div class="account-novel-app flex flex-col gap-[12px] color-{{ section.settings.novel_app_color_scheme }}">
  
    <p class="h5 h5--primary uppercase">{{ section.settings.novel_app_title }}</p>

    <p class="">{{ section.settings.novel_app_description }}</p>
    <a class="" href="{{ section.settings.novel_app_btn_link }}">
      <img src="{{ section.settings.novel_app_btn_img |  image_url }}">
    </a>
  
</div>

{% schema %}
  {
    "name": "Novel Section - pbj",
    "tag": "section",
    "class": "section",
    "settings": [      
      {
        "type": "header",
        "content": "Novel App"
      },
      {
        "type": "color_scheme",
        "id": "novel_app_color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "scheme-1"
      },
      {
        "type": "text",
        "id": "novel_app_title",
        "label": "Novel section title",
        "default": "Unlock your Club BERO wallet pass"
      },
      {
        "type": "text",
        "id": "novel_app_description",
        "label": "Novel section description",
        "default": "Access your credits anytime, anywhereâ€”and stay ready for the unexpected delights ahead."
      },
      {
        "type": "image_picker",
        "id": "novel_app_btn_img",
        "label": "Novel section button image"
      },
      {
        "type": "url",
        "id": "novel_app_btn_link",
        "label": "Novel section button link"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "presets": [
    {
      "name": "Novel Section - pbj"
    }
  ]
  }
  {% endschema %}