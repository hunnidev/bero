{%- liquid
  assign loyalty_tab = section.blocks | where: 'type', 'loyalty_tab'
-%}

<product-info
  id="MainProduct-{{ section.id }}"
  class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}"
  data-section="{{ section.id }}"
  data-product-id="{{ product.id }}"
  data-update-url="true"
  data-url="{{ product.url }}"
  {% if section.settings.image_zoom == 'hover' %}
    data-zoom-on-hover
  {% endif %}
>
  {{ 'section-main-product.css' | asset_url | stylesheet_tag }}
  {% comment %} {{ 'component-accordion.css' | asset_url | stylesheet_tag }} {% endcomment %}
  {{ 'component-price.css' | asset_url | stylesheet_tag }}
  {{ 'component-slider.css' | asset_url | stylesheet_tag }}
  {{ 'component-rating.css' | asset_url | stylesheet_tag }}
  {{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}

  {% unless product.has_only_default_variant %}
    {{ 'component-product-variant-picker.css' | asset_url | stylesheet_tag }}
    {{ 'component-swatch-input.css' | asset_url | stylesheet_tag }}
    {{ 'component-swatch.css' | asset_url | stylesheet_tag }}
  {% endunless %}
  {%- if product.quantity_price_breaks_configured? -%}
    {{ 'component-volume-pricing.css' | asset_url | stylesheet_tag }}
  {%- endif -%}

  <script src="{{ 'pbj-component-slider.js' | asset_url }}" defer="defer"></script>

  {%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  {%- endstyle -%}

  <script src="{{ 'product-info.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
  {%- if product.quantity_price_breaks_configured? -%}
    <script src="{{ 'show-more.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'price-per-item.js' | asset_url }}" defer="defer"></script>
  {%- endif -%}

  {% if section.settings.image_zoom == 'hover' %}
    <script id="EnableZoomOnHover-main" src="{{ 'magnify.js' | asset_url }}" defer="defer"></script>
  {% endif %}
  {%- if request.design_mode -%}
    <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
  {%- endif -%}

  {%- assign first_3d_model = product.media | where: 'media_type', 'model' | first -%}
  {%- if first_3d_model -%}
    {{ 'component-product-model.css' | asset_url | stylesheet_tag }}
    <link
      id="ModelViewerStyle"
      rel="stylesheet"
      href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css"
      media="print"
      onload="this.media='all'"
    >
    <link
      id="ModelViewerOverride"
      rel="stylesheet"
      href="{{ 'component-model-viewer-ui.css' | asset_url }}"
      media="print"
      onload="this.media='all'"
    >
  {%- endif -%}
  {% assign variant_images = product.images | where: 'attached_to_variant?', true | map: 'src' %}
  <div class="page-width">
    <div class="product product--{{ section.settings.media_size }} product--{{ section.settings.media_position }} product--{{ section.settings.gallery_layout }} product--mobile-{{ section.settings.mobile_thumbnails }} grid--flex grid--1-col {% if product.media.size > 0 %}grid--2-col-tablet{% else %}product--no-media{% endif %}">
      <div class="grid__item product__media-wrapper overflow-hidden">
        {%- assign breadcrumbs_block = section.blocks | where: 'type', 'breadcrumbs' -%}
        {%- if breadcrumbs_block.size > 0 -%}
          <div class="md:hidden">{%- render 'breadcrumbs' -%}</div>
        {%- endif -%}

        {% render 'product-media-gallery', variant_images: variant_images %}
        
        {%- if section.settings.title_top_mobile -%}
          <div class="md:hidden product__info-wrapper product__info-container">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when '@app' -%}
                  {%- liquid
                    assign show_app = true
                    assign previous_block_index = forloop.index0 | minus: 1
                    assign previous_block = section.blocks[previous_block_index]
                    if block.id contains 'reviews'
                      if previous_block.type == 'price'
                        assign show_app = false
                      elsif previous_block.type == 'collapsible_tab' and previous_block.settings.reviews_tab
                        assign show_app = false
                      endif
                    endif
                    if show_app
                      render block
                    endif
                  -%}
                {%- when 'text' -%}
                  <div
                    class="product__text inline-richtext text-body-medium{% if block.settings.text_style == 'uppercase' %} caption-with-letter-spacing{% elsif block.settings.text_style == 'subtitle' %} subtitle{% endif %}"
                    {{ block.shopify_attributes }}
                  >
                    {{- block.settings.text -}}
                  </div>
                {%- when 'breadcrumbs' -%}
                  <div class="hidden md:block">{%- render 'breadcrumbs' -%}</div>
                {%- when 'badges' -%}
                  {%- if product.tags.size > 0 -%}
                    <div class="product__badges card__badge p-0">
                      {%- render 'product-badges', product: product -%}
                    </div>
                  {%- endif -%}
                  <div class="product__title" {{ block.shopify_attributes }}>
                    <h1 id="product-title-2" style="scroll-margin-top: 100px;">{{ product.title | escape }}</h1>
                    <a href="{{ product.url }}" class="product__title">
                      <h2 class="h3 h3--primary">
                        {{ product.title | escape }}
                      </h2>
                    </a>
                  </div>
                {%- when 'price' -%}
                  <div class="flex items-center justify-between flex-wrap gap-[12px]">
                    <div>
                      <div id="price-{{ section.id }}" role="status" {{ block.shopify_attributes }}>
                        {%- render 'price',
                          product: product,
                          use_variant: true,
                          show_badges: false,
                          price_class: 'price--large'
                        -%}
                      </div>
                      {%- if product.quantity_price_breaks_configured? -%}
                        <div class="volume-pricing-note" id="Volume-Note-{{ section.id }}">
                          <span>{{ 'products.product.volume_pricing.note' | t }}</span>
                        </div>
                      {%- endif -%}
                      {%- if cart.taxes_included or cart.duties_included or shop.shipping_policy.body != blank -%}
                        <div class="product__tax caption rte{% if localization.country.iso_code == 'GB' %} hidden{% endif %}">
                          {%- if cart.duties_included and cart.taxes_included -%}
                            {{ 'products.product.duties_and_taxes_included' | t }}
                          {%- elsif cart.taxes_included -%}
                            {{ 'products.product.taxes_included' | t }}
                          {%- elsif cart.duties_included -%}
                            {{ 'products.product.duties_included' | t }}
                          {%- endif -%}
                          {%- if shop.shipping_policy.body != blank -%}
                            {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
                          {%- endif -%}
                        </div>
                      {%- endif -%}
                    </div>

                    {%- liquid
                      assign next_block_index = forloop.index0 | plus: 1
                      assign next_block = section.blocks[next_block_index]
                      if next_block.type == '@app' and next_block.id contains 'reviews'
                        render next_block
                      endif
                      
                      unless product.handle contains 'gift'
                        render 'product-loyalty-badge', product: product, block: block 
                      endunless
                    %}
                  </div>
                  <div class="payments-info-container mobile hidden" {{ block.shopify_attributes }}>
                    {%- assign product_form_installment_id = 'product-form-installment-' | append: section.id -%}
                    {%- form 'product', product, id: product_form_installment_id, class: 'installment caption-large' -%}
                      <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                      {{ form | payment_terms }}
                    {%- endform -%}
                  </div>
              {%- endcase -%}
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
      <div class="product__info-wrapper grid__item{% if settings.page_width > 1400 and section.settings.media_size == "small" %} product__info-wrapper--extra-padding{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        <section
          id="ProductInfo-{{ section.id }}"
          class="product__info-container{% if section.settings.enable_sticky_info %} product__column-sticky{% endif %}"
        >
          {%- assign product_form_id = 'product-form-' | append: section.id -%}

          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when '@app' -%}
                {%- liquid
                  assign show_app = true
                  assign previous_block_index = forloop.index0 | minus: 1
                  assign previous_block = section.blocks[previous_block_index]
                  if block.id contains 'reviews'
                    if previous_block.type == 'price'
                      assign show_app = false
                    elsif previous_block.type == 'collapsible_tab' and previous_block.settings.reviews_tab
                      assign show_app = false
                    endif
                  endif
                -%}

                {% if show_app %}
                  <div
                    {% if section.settings.title_top_mobile %}
                      class="max-md:hidden"
                    {% endif %}
                  >
                    {% render block %}
                  </div>
                {% endif %}
              {%- when 'text' -%}
                <div
                  class="product__text inline-richtext text-body-medium{% if block.settings.text_style == 'uppercase' %} caption-with-letter-spacing{% elsif block.settings.text_style == 'subtitle' %} subtitle{% endif %} {% if section.settings.title_top_mobile %} max-md:hidden {% endif %}"
                  {{ block.shopify_attributes }}
                >
                  {{- block.settings.text -}}
                </div>
              {%- when 'breadcrumbs' -%}
                <div class="hidden md:block">{%- render 'breadcrumbs' -%}</div>
              {%- when 'badges' -%}
                <div class="product__badges card__badge p-0 {% if section.settings.title_top_mobile %} max-md:hidden {% endif %}">
                  {%- render 'product-badges', product: product -%}
                </div>
              {%- when 'title' -%}
                <div
                  class="product__title {% if section.settings.title_top_mobile %} max-md:hidden {% endif %}"
                  {{ block.shopify_attributes }}
                >
                  {% unless template.name != 'product' %}
                    <h1 id="product-title">{{ product.title | escape }}</h1>
                  {% endunless %}
                  <a href="{{ product.url }}" class="product__title">
                    <h2 class="h3 h3--primary">
                      {{ product.title | escape }}
                    </h2>
                  </a>
                </div>
              {%- when 'price' -%}
                <div class="flex items-center justify-between flex-wrap gap-[12px] {% if section.settings.title_top_mobile %} max-md:hidden {% endif %}">
                  <div>
                    <div id="price-{{ section.id }}" role="status" {{ block.shopify_attributes }}>
                      {%- render 'price',
                        product: product,
                        use_variant: true,
                        show_badges: false,
                        price_class: 'price--large'
                      -%}
                    </div>
                    {%- if product.quantity_price_breaks_configured? -%}
                      <div class="volume-pricing-note" id="Volume-Note-{{ section.id }}">
                        <span>{{ 'products.product.volume_pricing.note' | t }}</span>
                      </div>
                    {%- endif -%}
                    {%- if cart.taxes_included or cart.duties_included or shop.shipping_policy.body != blank -%}
                      <div class="product__tax caption rte{% if localization.country.iso_code == 'GB' %} hidden{% endif %}">
                        {%- if cart.duties_included and cart.taxes_included -%}
                          {{ 'products.product.duties_and_taxes_included' | t }}
                        {%- elsif cart.taxes_included -%}
                          {{ 'products.product.taxes_included' | t }}
                        {%- elsif cart.duties_included -%}
                          {{ 'products.product.duties_included' | t }}
                        {%- endif -%}
                        {%- if shop.shipping_policy.body != blank -%}
                          {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
                        {%- endif -%}
                      </div>
                    {%- endif -%}
                  </div>
                  {%- liquid
                    unless product.handle contains 'gift'
                      render 'product-loyalty-badge', product: product, block: block
                    endunless
                    
                    assign next_block_index = forloop.index0 | plus: 1
                    assign next_block = section.blocks[next_block_index]
                    if next_block.type == '@app' and next_block.id contains 'reviews'
                      render next_block
                    endif
                  -%}
                </div>
                <div class="payments-info-container desktop hidden max-md:hidden" {{ block.shopify_attributes }}>
                  {%- assign product_form_installment_id = 'product-form-installment-' | append: section.id -%}
                  {%- form 'product', product, id: product_form_installment_id, class: 'installment caption-large' -%}
                    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                    {{ form | payment_terms }}
                  {%- endform -%}
                </div>
              {%- when 'inventory' -%}
                <p
                  class="product__inventory{% if block.settings.text_style == 'uppercase' %} caption-with-letter-spacing{% elsif block.settings.text_style == 'subtitle' %} subtitle{% endif %}{% if product.selected_or_first_available_variant.inventory_management != 'shopify' %} visibility-hidden{% endif %}"
                  {{ block.shopify_attributes }}
                  id="Inventory-{{ section.id }}"
                  role="status"
                >
                  {%- if product.selected_or_first_available_variant.inventory_management == 'shopify' -%}
                    {%- if product.selected_or_first_available_variant.inventory_quantity > 0 -%}
                      {%- if product.selected_or_first_available_variant.inventory_quantity
                          <= block.settings.inventory_threshold
                      -%}
                        <svg width="15" height="15" aria-hidden="true">
                          <circle cx="7.5" cy="7.5" r="7.5" fill="rgb(238,148,65, 0.3)"/>
                          <circle cx="7.5" cy="7.5" r="5" stroke="rgb(255, 255, 255)" stroke-width="1" fill="rgb(238,148,65)"/>
                        </svg>
                        {%- if block.settings.show_inventory_quantity -%}
                          {{-
                            'products.product.inventory_low_stock_show_count'
                            | t: quantity: product.selected_or_first_available_variant.inventory_quantity
                          -}}
                        {%- else -%}
                          {{- 'products.product.inventory_low_stock' | t -}}
                        {%- endif -%}
                      {%- else -%}
                        <svg width="15" height="15" aria-hidden="true">
                          <circle cx="7.5" cy="7.5" r="7.5" fill="rgb(62,214,96, 0.3)"/>
                          <circle cx="7.5" cy="7.5" r="5" stroke="rgb(255, 255, 255)" stroke-width="1" fill="rgb(62,214,96)"/>
                        </svg>
                        {%- if block.settings.show_inventory_quantity -%}
                          {{-
                            'products.product.inventory_in_stock_show_count'
                            | t: quantity: product.selected_or_first_available_variant.inventory_quantity
                          -}}
                        {%- else -%}
                          {{- 'products.product.inventory_in_stock' | t -}}
                        {%- endif -%}
                      {%- endif -%}
                    {%- else -%}
                      {%- if product.selected_or_first_available_variant.inventory_policy == 'continue' -%}
                        <svg width="15" height="15" aria-hidden="true">
                          <circle cx="7.5" cy="7.5" r="7.5" fill="rgb(62,214,96, 0.3)"/>
                          <circle cx="7.5" cy="7.5" r="5" stroke="rgb(255, 255, 255)" stroke-width="1" fill="rgb(62,214,96)"/>
                        </svg>
                        {{- 'products.product.inventory_out_of_stock_continue_selling' | t -}}
                      {%- else -%}
                        <svg width="15" height="15" aria-hidden="true">
                          <circle cx="7.5" cy="7.5" r="7.5" fill="rgb(200,200,200, 0.3)"/>
                          <circle cx="7.5" cy="7.5" r="5" stroke="rgb(255, 255, 255)" stroke-width="1" fill="rgb(200,200,200)"/>
                        </svg>
                        {{- 'products.product.inventory_out_of_stock' | t -}}
                      {%- endif -%}
                    {%- endif -%}
                  {%- endif -%}
                </p>
              {%- when 'description' -%}
                {%- if product.description != blank -%}
                  <div class="product__description rte quick-add-hidden" {{ block.shopify_attributes }}>
                    {{ product.description }}
                  </div>
                {%- endif -%}

              {%- when 'info' -%}

                {% if block.settings.text or block.settings.cta != blank %}
                  <div
                    class="product-info-block"
                    style="--info-border: {{ block.settings.border_color | default: '#d9d9d9' }}"
                  >
                    {% if block.settings.image != blank %}
                      <img
                        src="{{ block.settings.image | image_url: width: 400 }}"
                        alt="{{ block.settings.image.alt | default: 'Decorative image' }}"
                        class="block"
                      >
                    {% endif %}
                    <div>
                      {% if block.settings.text_heading != blank %}
                        <p>{{ block.settings.text_heading }}</p>
                      {% endif %}
                      <div>
                        {% if block.settings.text_heading != blank %}
                          <p>{{ block.settings.text_heading }}</p>
                        {% endif %}
                        {% if block.settings.text != blank %}
                          <p>{{ block.settings.text }}</p>
                        {% endif %}
                      </div>
                      {% if block.settings.cta != blank %}
                        <a href="{{ block.settings.cta_link | default: '#' }}" class="btn underline product-info-block-cta">{{ block.settings.cta }}</a>
                      {% endif %}
                    </div>
                    {% if block.settings.cta != blank %}
                      <a
                        href="{{ block.settings.cta_link | default: '#' }}"
                        class="btn underline product-info-block-cta"
                      >
                        {{- block.settings.cta -}}
                      </a>
                    {% endif %}
                  </div>
                {% endif %}


              {%- when 'sku' -%}
                <p
                  class="product__sku{% if block.settings.text_style == 'uppercase' %} caption-with-letter-spacing{% elsif block.settings.text_style == 'subtitle' %} subtitle{% endif %}{% if product.selected_or_first_available_variant.sku.size == 0 %} visibility-hidden{% endif %}"
                  id="Sku-{{ section.id }}"
                  role="status"
                  {{ block.shopify_attributes }}
                >
                  <span class="visually-hidden">{{ 'products.product.sku' | t }}:</span>
                  {{- product.selected_or_first_available_variant.sku -}}
                </p>
              {%- when 'custom_liquid' -%}
                {{ block.settings.custom_liquid }}
              {%- when 'collapsible_tab' -%}
                {%- liquid
                  assign show_accordion = false
                  if block.settings.reviews_tab
                    assign next_block_index = forloop.index0 | plus: 1
                    assign next_block = section.blocks[next_block_index]
                    if next_block.type == '@app' and next_block.id contains 'reviews'
                      assign show_accordion = true
                    endif
                  elsif block.settings.content != blank or block.settings.page != blank
                    assign show_accordion = true
                  elsif block.settings.nutrition_metafield
                    if product.metafields.custom.nutrition_block_group != blank or product.metafields.custom.nutrition_subtext != blank
                      assign show_accordion = true
                    endif
                  elsif block.settings.variant_details_metafield
                    assign show_accordion = true
                  elsif block.settings.awards_content_metafield
                    if product.metafields.custom.awards_accordion_content != blank
                      assign show_accordion = true
                    endif
                  elsif block.settings.loyalty_tab and loyalty_tab.size > 0
                    assign show_accordion = true
                  endif
                -%}
                {%- if show_accordion -%}
                  <div
                    class="accordion-item{% if block.settings.loyalty_tab %} accordion-item--loyalty{% endif %}"
                    :class="{ 'accordion-item--open': show }"
                    x-data="{show: {{ block.settings.default_open }}}"
                    :aria-expanded="show.toString()"
                    {{ block.shopify_attributes }}
                  >
                    <button
                      class="w-full"
                      @click="show = !show"
                      :aria-expanded="show.toString()"
                      role="button">
                      <h2 class="uppercase subtitle accordion-item__title">
                        {% render 'icon-accordion', icon: block.settings.icon %}
                        {{ block.settings.heading | default: block.settings.page.title | escape }}
                        {%- render 'icons', icon: 'minus' -%}
                        {%- render 'icons', icon: 'plus' -%}
                      </h2>
                    </button>
                    <div
                      class="rte accordion-item__content {% if block.settings.awards_content_metafield %}awards{% endif %}"
                      x-show="show"
                      x-collapse
                    >
                      {%- liquid
                        echo block.settings.content
                        echo block.settings.page.content
                        if block.settings.nutrition_metafield
                          render 'product-nutrition-block', product: product
                        endif
                        if block.settings.variant_details_metafield
                          render 'product-variant-details-block', product: product
                        endif
                        if block.settings.awards_content_metafield
                          render 'product-awards-content-block', product: product, awards: product.metafields.custom.awards_accordion_content.value
                        endif
                        if block.settings.reviews_tab
                          render next_block
                        endif
                      -%}
                      {%- if block.settings.loyalty_tab and loyalty_tab.size > 0 -%}
                        {%- assign loyalty_tab = loyalty_tab.first -%}
                        {%- render 'product-loyalty-tab', block: loyalty_tab, product: product -%}
                      {%- endif -%}
                    </div>
                  </div>

                  {% comment %}
                    OLD DAWN ACCORDION / NO TRANSITION
                    <div
                      class="product__accordion accordion-item accordion quick-add-hidden"
                      {{ block.shopify_attributes }}
                    >
                      <details id="Details-{{ block.id }}-{{ section.id }}">
                        <summary class="accordion-item__title">
                          <div class="summary__title">
                            {% render 'icon-accordion', icon: block.settings.icon %}
                            <h2 class="subtitle inline-richtext uppercase">
                              {{ block.settings.heading | default: block.settings.page.title | escape }}
                            </h2>
                          </div>
                          {%- render 'icons', icon: 'minus' -%}
                          {%- render 'icons', icon: 'plus' -%}
                        </summary>
                        <div class="accordion-item__content rte" id="ProductAccordion-{{ block.id }}-{{ section.id }}">
                          {{ block.settings.content }}
                          {{ block.settings.page.content }}
                        </div>
                      </details>
                    </div>
                  {% endcomment %}
                {%- endif -%}
              {%- when 'quantity_selector' -%}
                {%- liquid
                  assign next_block_index = forloop.index0 | plus: 1
                  assign next_block = section.blocks[next_block_index]
                  unless next_block.type == 'buy_buttons'
                    render 'product-quantity-selector', product: product, section: section, block: block, product_form_id: product_form_id
                  endunless
                -%}
              {%- when 'popup' -%}
                <modal-opener
                  class="product-popup-modal__opener quick-add-hidden"
                  data-modal="#PopupModal-{{ block.id }}"
                  {{ block.shopify_attributes }}
                >
                  <button
                    id="ProductPopup-{{ block.id }}"
                    class="product-popup-modal__button link"
                    type="button"
                    aria-haspopup="dialog"
                  >
                    {{ block.settings.text | default: block.settings.page.title | escape }}
                  </button>
                </modal-opener>
              {%- when 'share' -%}
                {% liquid
                  assign share_url = product.selected_variant.url | default: product.url | prepend: request.origin
                  render 'share-button', block: block, share_link: share_url
                %}

              {%- when 'variant_picker' -%}
                {% render 'product-variant-picker', product: product, block: block, product_form_id: product_form_id %}
              {% when 'logged_out_member_modal' %}
                {% render 'logged-out-member-modal' %}
              {%- when 'buy_buttons' -%}
                <div class="pdp-cta-container">
                  {%- if product.tags contains 'member-only' and customer == null -%}
                    {% assign cta_url = settings.loyalty_landing_page %}

                    {% if product.tags contains 'pre-order' and settings.pdp_member_preorder_cta_url != blank %}
                      {% assign cta_url = settings.pdp_member_preorder_cta_url %}
                    {% endif %}
                    <div class="!mb-[52px]">
                      <a
                        href="{{ cta_url }}"
                        class="button button--primary button--full-width"
                      >
                        {{ 'products.product.become_member' | t }}
                      </a>
                      <a href="/account/login" class="block mx-auto normal-case no-underline mt-4 text-center">
                        {{- 'products.product.member_login' | t }}
                        <span class="hover:opacity-80 underlined-cta normal-case">Log in</span></a
                      >
                    </div>
                  {%- else -%}
                    {% # OOS RENDERING ON LOAD %}
                    {% liquid
