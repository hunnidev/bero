        "collapsible_row_9ECmBL": {
          "settings": {
            "row_content": "<p>Whenever possible, store your beer cold / cool—below 10 degrees Celsius is the sweet spot. Never expose your beer to hot temperatures or heat sources.</p>"
          }
        },
        "collapsible_row_JmHMgL": {
          "settings": {
