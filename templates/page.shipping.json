        "heading_LxCMVH": {
          "type": "heading",
          "settings": {
            "show_heading_as": "h2",
            "heading": "Can I change or cancel my order?",
            "heading_size": "h5",
            "show_title_eyebrow": false,
            "left_eyebrow": false,
            "show_trout_icon": false
          }
        },
        "text_VrqtRE": {
          "type": "text",
          "settings": {
            "text": "<p>If you would like to change or cancel your order, please contact <a href=\"mailto:support@bero.com\"><span style=\"text-decoration:underline\">support@berobrewing.com</span></a>. Be sure to change or cancel your order before it has shipped.</p>"
